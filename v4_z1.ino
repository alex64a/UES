void setup() {



  USE_SERIAL.begin(115200);

  Heltec.begin(true /*DisplayEnable Enable*/, false /*LoRa Enable*/, true /*Serial Enable*/);
  Heltec.display->init();

  USE_SERIAL.println();
  USE_SERIAL.println();
  USE_SERIAL.println();

  for (uint8_t t = 4; t > 0; t--) {
    USE_SERIAL.printf("[SETUP] WAIT %d...\n", t);
    USE_SERIAL.flush();
    delay(1000);
  }

  wifiMulti.addAP("ssid", "password");
}

void loop() {
  // wait for WiFi connection
  if ((wifiMulti.run() == WL_CONNECTED)) {

    HTTPClient http;

    USE_SERIAL.print("[HTTP] begin...\n");
    // configure traged server and url
    //http.begin("https://www.howsmyssl.com/a/check", ca); //HTTPS
    http.begin("https://api.openweathermap.org/data/2.5/weather?q=Novi Sad&appid=bb9fb5e727eb6fe85f2d838bff5459cc&units=metric");  //HTTP

    USE_SERIAL.print("[HTTP] GET...\n");
    // start connection and send HTTP header
    int httpCode = http.GET();

    // httpCode will be negative on error
    if (httpCode > 0) {
      // HTTP header has been send and Server response header has been handled
      USE_SERIAL.printf("[HTTP] GET... code: %d\n", httpCode);

      // file found at server
      if (httpCode == HTTP_CODE_OK) {
        String payload = http.getString();
        USE_SERIAL.println(payload);
        char json[1024];
        payload.toCharArray(json, payload.length() + 1);
        DynamicJsonDocument doc(1024);
        deserializeJson(doc, json);
        float currentTemp = doc["main"]["temp"];
        float minTemp = doc["main"]["temp_min"];
        float maxTemp = doc["main"]["temp_max"];
        int pressure = doc["main"]["pressure"];
        int humidity = doc["main"]["humidity"];
        float windSpeed = doc["wind"]["speed"];
        Serial.println(currentTemp);
        Serial.println(minTemp);
        Serial.println(maxTemp);
        Serial.println(pressure);
        Serial.println(humidity);
        Serial.println(windSpeed);
        Heltec.display->setTextAlignment(TEXT_ALIGN_LEFT);
        Heltec.display->drawString(5, 0, "Current temp: " + String(currentTemp) + (char)247 + "C");
        Heltec.display->drawString(5, 10, "Min temp: " + String(minTemp) + (char)247 + "C");
        Heltec.display->drawString(5, 20, "Max temp: " + String(maxTemp) + (char)247 + "C");
        Heltec.display->drawString(5, 30, "Pressure: " + String(pressure) + "hPa");
        Heltec.display->drawString(5, 40, "Humidity: " + String(humidity) + "%");
        Heltec.display->drawString(5, 50, "Wind speed: " + String(windSpeed) + "km/h");
    



        Heltec.display->display();
      }
    } else {
      USE_SERIAL.printf("[HTTP] GET... failed, error: %s\n", http.errorToString(httpCode).c_str());
    }

    http.end();
  }

  delay(5000 * 12 * 5);
}
